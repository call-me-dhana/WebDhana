@{
    ViewData["Title"] = "Home Page";
}




<form>
    <div class="container mt-5  ">
        <div class="card shadow bg-warning mx-auto" style="width:70%">
            <h1 class="text-center mb-4 mt-4">Fill your details here</h1>

            <div class="row">
                <div class="mb-3 col-6 ms-3">
                    <label for="exampleInputName1" class="form-label">Name</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Enter your name">

                </div>

                <div class="mb-3 col-5">
                    <label for="exampleInputAddress1" class="form-label">Address</label>
                    <input type="text" class="form-control" id="exampleInputAddress1" placeholder="Enter your address">
                </div>
            </div>

            <div class="row">
                <div class="mb-3 col-6 ms-3">
                    <label for="exampleInputEmail1" class="form-label">Email address</label>
                    <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Enter your email">
                </div>

                <div class="mb-3 col-5">
                    <label for="exampleInputAge1" class="form-label">Age</label>
                    <input type="date" class="form-control" id="exampleInputAge1" placeholder="Enter your Age">
                </div>
            </div>

            <div class="ms-3 text-center mb-4 mt-3">
                <button type="submit" class="btn btn-primary ">Submit</button>
                <button type="reset" class="btn btn-danger ms-2">cancel</button>
            </div>

        </div>
    </div>
</form>

